<p id="notice"><%= notice %></p>

<h1>Posts</h1>
<%= link_to 'Create a new post', new_post_path %>

      <% @posts.each do |post| %>

          <h4><%= post.title %> <small><i>Posted on <%= post.creation_date %> by <%= post.user_id %></i></small></h4>
          <p><%= post.text %></p>
          <p><%= link_to 'Read more', post %> <%= link_to 'Edit', edit_post_path(post)%> <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></p>

      <% end %>
