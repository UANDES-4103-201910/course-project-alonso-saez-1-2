<p id="notice"><%= notice %></p>

<h1>Posts</h1>
<h2>Here you will see our most fascinates posts</h2>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Creation date</th>
      <th>Solve status</th>
      <th>File</th>
      <th>Image</th>
      <th>Text</th>
      <th>Link</th>
      <th>Wall</th>
      <th>Super admin</th>
      <th>Admin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
	<td><%= post.user %></td>
        <td><%= post.title %></td>
        <td><%= post.creation_date %></td>
        <td><%= post.solve_status %></td>
        <td><%= post.file %></td>
        <td><%= post.image %></td>
        <td><%= post.text %></td>
        <td><%= post.link %></td>
        <td><%= post.wall %></td>
        <td><%= post.super_admin %></td>
        <td><%= post.admin %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Back', start_page_home_page_path %>
