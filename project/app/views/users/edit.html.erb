<h1>Editing User</h1>

<%= form_with(model: @user, local: true) do |form| %>

  <div class="field-container col-md-offset-4">
    <div class="field">
      <%= form.label :biography %>
      <%= form.text_field :biography %>
    </div>

    <div class="input-group">
      <%= form.file_field :image, direct_upload: true %>
    </div>

    <div class="field">
      <%= form.label :nickname %>
      <%= form.text_field :nickname %>
    </div>

    <div class="field">
      <%= form.label :email %>
      <%= form.text_field :email %>
    </div>

    <div class="field">
      <%= form.label :password %>
      <%= form.text_field :password %>
    </div>

    <div class="field">
      <%= form.label :country %>
      <%= form.text_field :country %>
    </div>

    <div class="field">
      <%= form.label :city %>
      <%= form.text_field :city %>
    </div>

    <div class="field">
      <%= form.hidden_field :super_admin_id %>
    </div>

    <div class="field">
      <%= form.hidden_field :admin_id %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  </div>

<% end %>


<%= link_to 'Show', @user %> |
<%= link_to 'Back', users_path %>
