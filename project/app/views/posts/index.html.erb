<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-md-10 col-md-offset-1">

<h1>Posts</h1>
<%= link_to 'Create a new post', new_post_path %>

<% @posts.each do |post| %>
    <div class="row">
    <div class="span8">
      <div class="row">
        <div class="span8">
          <h4><strong><a <%= link_to post.title, post %></a></strong><small><i> Posted on <%= post.created_at %> by <%= post.user_id %></i></small></h4>
        </div>
      </div>
      <div class="row">
        <div class="col-md-2">
          <a href="#" class="thumbnail">
              <img src="http://placehold.it/260x180" alt="">
          </a>
        </div>
        <div class="col-md-10">
          <p>
            <%= post.solve_status %>
          </p>
          <p>
            <%= post.text %>
          </p>
          <p><a <%= link_to 'Read more', post %> <%= link_to 'Edit', edit_post_path(post)%> <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></a></p>
        </div>
      </div>
    </div>
  </div>
  <hr>

<% end %>

    <div class="paging clearfix">
      <a class="btn pull-left" href="#"><i class="icon-arrow-left2 left"></i><span>Older</span><span class="hidden-xs"> Posts</span></a>
    </div>
  </div>
</div>
