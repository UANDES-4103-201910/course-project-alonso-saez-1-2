<p id="notice"><%= notice %></p>

<h1>Users</h1>

<% @users.each do |user| %>
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="row">
        <div class="span8">
          <div class="row">
            <div class="col-md-2">
              <a href="#" class="thumbnail">
                  <%= image_tag(user.image, style:'width:100%') if user.image.attached?%>
              </a>
            </div>
            <div class="col-md-6">
              <h4><strong><a <%=link_to user.nickname, user_path(user) %></a></strong></h4>
            </div>
          </div>
        </div>
      </div>
      <hr>
    </div>
  </div>
  <br>
<% end %>

<%= link_to 'New User', new_user_path %>
